<Window x:Class="ScrapLangEditor.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
Title="ScrapLang Editor" Height="600" Width="800"
Background="#121212" Foreground="#D0D0D0"
WindowStyle="SingleBorderWindow" AllowsTransparency="False"
ShowInTaskbar="True" Icon="/gfdgdfg but ico.png" Opacity="1">
   <Window.Resources>
       <!-- Modern button style -->
       <Style TargetType="Button">
           <Setter Property="Background" Value="#1F1F1F"/>
           <Setter Property="Foreground" Value="#D0D0D0"/>
           <Setter Property="FontSize" Value="14"/>
           <Setter Property="Padding" Value="10,5"/>
           <Setter Property="Margin" Value="5"/>
           <Setter Property="BorderBrush" Value="#292929"/>
           <Setter Property="BorderThickness" Value="1"/>
           <Setter Property="Template">
               <Setter.Value>
                   <ControlTemplate TargetType="Button">
                       <Border Background="{TemplateBinding Background}" 
                       BorderBrush="{TemplateBinding BorderBrush}" 
                       BorderThickness="{TemplateBinding BorderThickness}" 
                       CornerRadius="5">
                           <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                       </Border>
                   </ControlTemplate>
               </Setter.Value>
           </Setter>
       </Style>

       <!-- Subtle typing animation -->
       <Storyboard x:Key="TypingAnimation">
           <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.7" To="1" Duration="0:0:0.2" AutoReverse="False"/>
           <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" From="0.95" To="1" Duration="0:0:0.2" AutoReverse="False"/>
           <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" From="0.95" To="1" Duration="0:0:0.2" AutoReverse="False"/>
       </Storyboard>
   </Window.Resources>

   <DockPanel Opacity="1">
       <!-- Top Menu -->
       <Menu DockPanel.Dock="Top" Background="#1A1A1A" Foreground="#D0D0D0" Opacity="1">
           <MenuItem Header="File" Opacity="1">
               <MenuItem Header="Open" Click="OpenFile_Click" Opacity="1"/>
               <MenuItem Header="Save" Click="SaveFile_Click" Opacity="1"/>
           </MenuItem>
           <MenuItem Header="Edit" Opacity="1">
               <MenuItem Header="Undo" Click="Undo_Click" Opacity="1"/>
               <MenuItem Header="Redo" Click="Redo_Click" Opacity="1"/>
           </MenuItem>
       </Menu>

       <!-- Main Content -->
       <Grid>
           <Grid.ColumnDefinitions>
               <ColumnDefinition Width="141*"/>
               <ColumnDefinition Width="95*"/>
               <ColumnDefinition Width="564*"/>
           </Grid.ColumnDefinitions>
           <Grid.RowDefinitions>
               <RowDefinition Height="*"/>
               <RowDefinition Height="Auto"/>
           </Grid.RowDefinitions>

           <!-- Text Editor -->
           <avalonedit:TextEditor x:Name="textEditor" ShowLineNumbers="True" FontFamily="Consolas" FontSize="14"
                          Background="#1E1E1E" Foreground="#A9A9A9" BorderBrush="#292929" BorderThickness="0"
                          Padding="10" TextChanged="TextEditor_TextChanged"
                          HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" Grid.ColumnSpan="3" Opacity="1"
                          PreviewMouseWheel="TextEditor_PreviewMouseWheel">
               <avalonedit:TextEditor.Effect>
                   <DropShadowEffect/>
               </avalonedit:TextEditor.Effect>
               <avalonedit:TextEditor.RenderTransform>
                   <ScaleTransform x:Name="textEditorScaleTransform" ScaleX="1" ScaleY="1"/>
               </avalonedit:TextEditor.RenderTransform>
           </avalonedit:TextEditor>

           <!-- Status Bar -->
           <StackPanel Orientation="Horizontal" Background="#1A1A1A" Height="30" Grid.ColumnSpan="3" Margin="0,536,0,0" Opacity="1">
               <TextBlock Text="Ready" Margin="10,0" VerticalAlignment="Center" Foreground="#A9A9A9" Opacity="1"/>
           </StackPanel>
       </Grid>
   </DockPanel>
</Window>
